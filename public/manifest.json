{
    "name": "TomeSphere - Your Digital Library",
    "short_name": "TomeSphere",
    "description": "Advanced digital library platform with AI-powered reading, student verification, study groups, and comprehensive book management. Features include real-time analytics, admin dashboard, voice-enabled search, and offline reading capabilities.",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#0f172a",
    "theme_color": "#6366f1",
    "orientation": "any",
    "scope": "/",
    "icons": [
        {
            "src": "/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshot-wide.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "/screenshot-mobile.png",
            "sizes": "750x1334",
            "type": "image/png",
            "form_factor": "narrow"
        }
    ],
    "categories": [
        "education",
        "books",
        "productivity",
        "entertainment"
    ],
    "shortcuts": [
        {
            "name": "Explore Books",
            "short_name": "Explore",
            "description": "Browse and discover new books",
            "url": "/explore",
            "icons": [
                {
                    "src": "/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "My Library",
            "short_name": "Library",
            "description": "Access your personal book collection",
            "url": "/library",
            "icons": [
                {
                    "src": "/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Reading List",
            "short_name": "Reading",
            "description": "Continue reading your books",
            "url": "/home",
            "icons": [
                {
                    "src": "/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Admin Panel",
            "short_name": "Admin",
            "description": "Access admin dashboard",
            "url": "/admin",
            "icons": [
                {
                    "src": "/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share-book",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "book",
                    "accept": [
                        "application/pdf",
                        "application/epub+zip",
                        ".pdf",
                        ".epub",
                        "*/*"
                    ]
                }
            ]
        }
    },
    "features": [
        "Advanced Search",
        "Voice Input",
        "Offline Reading",
        "Study Groups",
        "Textbook Exchange",
        "Student Verification",
        "Real-time Analytics",
        "Admin Dashboard",
        "Book Reviews",
        "Reading Progress Tracking",
        "Achievements & Gamification",
        "Social Features",
        "Dark Mode"
    ],
    "prefer_related_applications": false,
    "related_applications": [],
    "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
    "lang": "en-US",
    "dir": "ltr",
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "minimal-ui"
    ],
    "launch_handler": {
        "client_mode": [
            "navigate-existing",
            "auto"
        ]
    },
    "edge_side_panel": {
        "preferred_width": 400
    },
    "protocol_handlers": [
        {
            "protocol": "web+tomesphere",
            "url": "/?book=%s"
        }
    ]
}