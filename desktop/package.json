{
    "name": "tomesphere-desktop",
    "version": "1.0.0",
    "description": "TomeSphere Desktop Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "zip": "powershell -Command \"Compress-Archive -Path dist\\TomeSphere-win32-x64\\* -DestinationPath dist\\TomeSphere-win32-x64.zip\""
    },
    "author": "TomeSphere Team",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2"
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0"
    },
    "build": {
        "appId": "com.tomesphere.desktop",
        "productName": "TomeSphere",
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "dist"
        }
    }
}